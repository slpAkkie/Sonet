extends layouts/general

block vars
  -
    let title = 'Login'
    let bg_dark = true

    let fields = [
      {
        id: 'login',
        name: 'login',
        label: 'Ваш логин:',
        placeholder: 'Login',
      },
      {
        id: 'password',
        name: 'password',
        type: 'password',
        label: 'Ваш пароль:',
        placeholder: 'Password',
      },
    ]
    let submit = {
      type: 'submit',
      text: 'Войти',
      classes: 'mt-4'
    }

block includes
  include components/field-row
  include components/button

block content
  .login__container.container.content_center
    .login

      //- Left side
      .py-5
        h1.my-0 SkyNotes

      .login__separator.separator.separator_vertical

      //- Right side
      .py-5
        h3.mt-0.text_center Вход
        form.login__form(action="#")
            each field in fields
              +field-row(field)
            +button(submit)
